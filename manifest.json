{
  "manifest_version": 2,

  "name": "Bloxter",
  "description": "This extension allows the user to change the background color of the current page.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Bloxter Information"
  },
  "permissions": [
    "activeTab",
    "storage",
    "http://www.bloxter.com/",
    "http://bloxter.com/",
    "http://www.mygopigo.com/"
  ],
  "homepage_url": "http://mygopigo.com",
  "offline_enabled": true
}
