{
  "manifest_version": 2,

  "name": "Bloxter",
  "description": "This extension helps you connect to your GoPiGo3 robot, stop your robot, and check your battery level.",
  "version": "1.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Bloxter Information"
  },
  "background":
   {
       "scripts": ["dexter_core.js"]
   },
  "permissions": [
    "storage",
    "http://www.bloxter.com/*",
    "http://bloxter.com/*",
    "http://www.mygopigo.com/*"
  ],
  "homepage_url": "http://mygopigo.com",
  "offline_enabled": true
}
